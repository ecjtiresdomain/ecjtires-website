---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Page Not Found - ECJ Tire Supply">
  <section class="min-h-[70vh] flex items-center justify-center py-20 bg-dark-100 relative overflow-hidden">
    <!-- Background elements -->
    <div class="absolute inset-0 grid-pattern opacity-30"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary/10 rounded-full blur-3xl"></div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-lg mx-auto">
        <!-- 404 Illustration -->
        <div class="mb-8">
          <div class="inline-flex items-center justify-center w-32 h-32 bg-gradient-to-br from-primary/20 to-secondary/20 mb-6" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-16 h-16 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" stroke-width="2" />
              <circle cx="12" cy="12" r="4" stroke-width="2" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2v4M12 18v4M2 12h4M18 12h4" />
            </svg>
          </div>
          <h1 class="text-7xl font-bold text-white mb-2 uppercase tracking-tight">
            4<span class="gradient-text">0</span>4
          </h1>
          <h2 class="text-2xl font-bold text-gray-300 mb-4 uppercase tracking-wide">Page Not Found</h2>
        </div>

        <p class="text-gray-400 mb-8">
          Oops! Looks like this page has a flat tire. The page you're looking for doesn't exist or has been moved.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Back to Home
          </a>
          <a href="/contact/" class="btn btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Contact Us
          </a>
        </div>

        <!-- Quick Links -->
        <div class="mt-12 pt-8 border-t border-dark-500">
          <p class="text-gray-500 text-sm uppercase tracking-wider mb-4">Maybe you were looking for:</p>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="/services/" class="text-primary hover:text-secondary transition-colors">Services</a>
            <span class="text-dark-500">|</span>
            <a href="/tires/" class="text-primary hover:text-secondary transition-colors">Tires</a>
            <span class="text-dark-500">|</span>
            <a href="/mags/" class="text-primary hover:text-secondary transition-colors">Mags</a>
            <span class="text-dark-500">|</span>
            <a href="/gallery/" class="text-primary hover:text-secondary transition-colors">Gallery</a>
            <span class="text-dark-500">|</span>
            <a href="/book/" class="text-primary hover:text-secondary transition-colors">Book Appointment</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
