---
import MainLayout from '../../layouts/MainLayout.astro';
import Hero from '../../components/Hero.astro';
import { serviceIcons } from '../../lib/brands.js';

// Full services list with descriptions
const services = [
  {
    id: '1',
    name: 'Tire Installation & Mounting',
    slug: 'tire-installation',
    icon: 'tire-installation',
    short_description: 'Professional tire mounting and installation for all vehicle types.',
    full_description: 'Our expert technicians ensure proper tire mounting with precise torque specifications. We handle all vehicle types from motorcycles to SUVs and trucks. Includes valve stem inspection and replacement if needed.',
    features: ['All tire sizes and types', 'Proper torque specifications', 'Valve stem inspection', 'TPMS sensor handling'],
  },
  {
    id: '2',
    name: 'Wheel Alignment',
    slug: 'wheel-alignment',
    icon: 'wheel-alignment',
    short_description: 'Precision alignment to extend tire life and improve handling.',
    full_description: 'Computer-aided wheel alignment service that ensures your vehicle drives straight and true. Proper alignment extends tire life, improves fuel efficiency, and provides better handling.',
    features: ['Computer-aided alignment', 'Toe, camber, and caster adjustment', 'Steering wheel centering', 'Before/after printout'],
  },
  {
    id: '3',
    name: 'Tire Balancing',
    slug: 'tire-balancing',
    icon: 'tire-balancing',
    short_description: 'Computer-balanced wheels for a smooth, vibration-free ride.',
    full_description: 'Using state-of-the-art balancing equipment, we ensure your wheels are perfectly balanced. This eliminates vibrations at highway speeds and extends the life of your tires and suspension components.',
    features: ['Computer spin balancing', 'Eliminates vibrations', 'Extends tire life', 'Protects suspension'],
  },
  {
    id: '4',
    name: 'Vulcanizing & Tire Repair',
    slug: 'vulcanizing',
    icon: 'vulcanizing',
    short_description: 'Expert tire repair and patching services.',
    full_description: 'Professional tire repair using industry-standard vulcanizing techniques. We repair punctures, cuts, and other damage when safe to do so, saving you the cost of a new tire.',
    features: ['Puncture repair', 'Hot and cold patches', 'Sidewall assessment', 'Safety inspection'],
  },
  {
    id: '5',
    name: 'Change Oil',
    slug: 'change-oil',
    icon: 'change-oil',
    short_description: 'Quality oil change service to keep your engine running smoothly.',
    full_description: 'Regular oil changes are essential for engine longevity. We use quality motor oils and filters, and our service includes a multi-point inspection to catch potential issues early.',
    features: ['Quality motor oils', 'OEM-spec filters', 'Multi-point inspection', 'Proper disposal'],
  },
  {
    id: '6',
    name: 'Brake Service',
    slug: 'brake-service',
    icon: 'brake-service',
    short_description: 'Complete brake inspection, repair, and replacement.',
    full_description: 'Your safety depends on reliable brakes. We offer complete brake services including pad replacement, rotor resurfacing or replacement, brake fluid flush, and comprehensive inspections.',
    features: ['Brake pad replacement', 'Rotor service', 'Brake fluid flush', 'Caliper service'],
  },
  {
    id: '7',
    name: 'Underchassis Repair',
    slug: 'underchassis',
    icon: 'underchassis',
    short_description: 'Suspension and underchassis maintenance and repair.',
    full_description: 'We service all underchassis components including suspension parts, bushings, ball joints, tie rods, and more. Keep your vehicle riding smooth and handling safely.',
    features: ['Suspension repair', 'Bushing replacement', 'Ball joint service', 'Tie rod ends'],
  },
  {
    id: '8',
    name: 'Battery Service',
    slug: 'battery',
    icon: 'battery',
    short_description: 'Battery testing, charging, and replacement services.',
    full_description: 'Comprehensive battery services including testing, charging, terminal cleaning, and replacement. We carry quality batteries for most vehicle makes and models.',
    features: ['Battery testing', 'Jump start service', 'Terminal cleaning', 'Battery replacement'],
  },
  {
    id: '9',
    name: 'Aircon Cleaning',
    slug: 'aircon',
    icon: 'aircon',
    short_description: 'Car air conditioning cleaning and maintenance.',
    full_description: 'Keep your car cool and comfortable with our aircon cleaning service. We clean the evaporator, check refrigerant levels, and ensure your AC system is working efficiently.',
    features: ['Evaporator cleaning', 'Refrigerant check', 'Odor elimination', 'System inspection'],
  },
];
---

<MainLayout title="Our Services - ECJ Tire Supply">
  <Hero
    title="Our Services"
    subtitle="Complete Tire & Car Care Solutions"
    description="From tire installation to full car maintenance, we offer comprehensive automotive services to keep you safely on the road."
    showCTA={false}
    compact={true}
  />

  <!-- Services Overview -->
  <section class="py-16 bg-dark-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <div class="section-badge justify-center mx-auto">
          <span class="w-2 h-2 bg-primary rounded-full"></span>
          <span>What We Offer</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Professional Automotive Services
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Quality workmanship, fair prices, and friendly service. That's what you can expect at ECJ Tire Supply.</p>
      </div>

      <div class="space-y-6 max-w-5xl mx-auto">
        {services.map((service) => (
          <div id={service.slug} class="card overflow-hidden scroll-mt-24 group">
            <div class="md:flex">
              <div class="md:w-1/3 bg-dark-300 p-6 flex items-center justify-center">
                <div class="text-center">
                  <div class="w-16 h-16 bg-dark-400 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-dark-500 transition-colors">
                    <span class="text-3xl">{serviceIcons[service.icon] || serviceIcons.default}</span>
                  </div>
                  <h3 class="text-lg font-bold text-white">{service.name}</h3>
                </div>
              </div>
              <div class="md:w-2/3 p-6 bg-dark-200">
                <p class="text-gray-400 mb-4 leading-relaxed">{service.full_description}</p>
                <div class="mb-4">
                  <h4 class="font-semibold text-white mb-2 text-sm">What's Included:</h4>
                  <ul class="grid sm:grid-cols-2 gap-2">
                    {service.features.map((feature) => (
                      <li class="flex items-center gap-2 text-gray-400 text-sm">
                        <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                </div>
                <div class="flex flex-wrap gap-3">
                  <a href="/book/" class="btn btn-primary text-sm">
                    Book This Service
                  </a>
                  <a href="/contact/" class="btn btn-secondary text-sm">
                    Ask a Question
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-dark-200 border-t border-dark-400">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Need a Service Not Listed?
      </h2>
      <p class="text-gray-400 mb-8 max-w-2xl mx-auto">We may be able to help! Contact us to discuss your specific automotive needs.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="btn btn-secondary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Us
        </a>
        <a href="tel:+639123456789" class="btn btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>
    </div>
  </section>
</MainLayout>
