---
import MainLayout from '../../layouts/MainLayout.astro';
import Hero from '../../components/Hero.astro';
import { serviceIcons } from '../../lib/brands.js';
import { getServices } from '../../lib/directus.js';

// Fetch services from Directus
const allServices = await getServices();
---

<MainLayout title="Our Services - ECJ Tire Supply">
  <Hero
    title="Our Services"
    subtitle="Complete Tire & Car Care Solutions"
    description="From tire installation to full car maintenance, we offer comprehensive automotive services to keep you safely on the road."
    showCTA={false}
    compact={true}
  />

  <!-- Services Overview -->
  <section class="py-16 bg-dark-100">
    <div class="container mx-auto px-4">
      {allServices.length === 0 ? (
        <!-- Empty state when no services in Directus -->
        <div class="text-center py-16">
          <svg class="w-20 h-20 mx-auto text-gray-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h3 class="text-2xl font-bold text-white mb-3">Our Services List is Being Updated</h3>
          <p class="text-gray-400 mb-6 max-w-md mx-auto">We're currently updating our services information. Contact us to learn more about what we offer!</p>
          <div class="flex gap-4 justify-center">
            <a href="/contact/" class="btn btn-primary">Contact Us</a>
            <a href="tel:+639123456789" class="btn btn-secondary">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call Now
            </a>
          </div>
        </div>
      ) : (
        <>
          <div class="text-center mb-12">
            <div class="section-badge justify-center mx-auto">
              <span class="w-2 h-2 bg-primary rounded-full"></span>
              <span>What We Offer</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              Professional Automotive Services
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto">Quality workmanship, fair prices, and friendly service. That's what you can expect at ECJ Tire Supply.</p>
          </div>

          <div class="space-y-6 max-w-5xl mx-auto">
            {allServices.map((service) => (
              <div id={service.slug} class="card overflow-hidden scroll-mt-24 group">
                <div class="md:flex">
                  <div class="md:w-1/3 bg-dark-300 p-6 flex items-center justify-center">
                    <div class="text-center">
                      <div class="w-16 h-16 bg-dark-400 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-dark-500 transition-colors">
                        <span class="text-3xl">{serviceIcons[service.icon] || serviceIcons.default}</span>
                      </div>
                      <h3 class="text-lg font-bold text-white">{service.name}</h3>
                    </div>
                  </div>
                  <div class="md:w-2/3 p-6 bg-dark-200">
                    <p class="text-gray-400 mb-4 leading-relaxed">{service.full_description || service.short_description}</p>
                    {service.features && service.features.length > 0 && (
                      <div class="mb-4">
                        <h4 class="font-semibold text-white mb-2 text-sm">What's Included:</h4>
                        <ul class="grid sm:grid-cols-2 gap-2">
                          {service.features.map((feature: string) => (
                            <li class="flex items-center gap-2 text-gray-400 text-sm">
                              <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                              </svg>
                              {feature}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}
                    <div class="flex flex-wrap gap-3">
                      <a href="/book/" class="btn btn-primary text-sm">
                        Book This Service
                      </a>
                      <a href="/contact/" class="btn btn-secondary text-sm">
                        Ask a Question
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-dark-200 border-t border-dark-400">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Need a Service Not Listed?
      </h2>
      <p class="text-gray-400 mb-8 max-w-2xl mx-auto">We may be able to help! Contact us to discuss your specific automotive needs.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="btn btn-secondary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Us
        </a>
        <a href="tel:+639123456789" class="btn btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>
    </div>
  </section>
</MainLayout>
