---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import { getBranches } from '../lib/directus.js';

// Fallback branch data
const fallbackBranches = [
  {
    id: '1',
    name: 'ECJ Tires',
    is_main_branch: true,
    address: 'Main Street, Antipolo City, Rizal, Philippines',
    phone: '+63 912 345 6789',
    email: 'ecjtires@email.com',
    operating_hours: '8:00 AM - 5:00 PM Daily',
  },
  {
    id: '2',
    name: 'ECJL Tires',
    is_main_branch: false,
    address: 'Second Branch Location, Antipolo City, Rizal, Philippines',
    phone: '+63 912 345 6790',
    email: 'ecjltires@email.com',
    operating_hours: '8:00 AM - 5:00 PM Daily',
  },
];

// Fetch from Directus with fallback
const directusBranches = await getBranches();
const branches = directusBranches.length > 0 ? directusBranches : fallbackBranches;

// Get URL params for pre-filled inquiry
const url = Astro.url;
const inquiryType = url.searchParams.get('inquiry') || '';
const inquiryItem = url.searchParams.get('item') || '';
---

<MainLayout title="Contact Us - ECJ Tire Supply">
  <Hero
    title="Contact Us"
    subtitle="We're Here to Help"
    description="Have questions? Need a quote? Want to schedule a service? Reach out to us anytime."
    showStats={false}
    showCTA={false}
    compact={true}
  />

  <section class="py-20 bg-dark-100 relative overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-30"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="card p-8">
            <h2 class="text-2xl font-bold text-white mb-6 uppercase tracking-wide">Send Us a Message</h2>

            <form id="contact-form" class="space-y-6">
              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Full Name <span class="text-primary">*</span></label>
                  <input type="text" id="name" name="name" required class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" placeholder="Juan Dela Cruz" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Phone Number <span class="text-primary">*</span></label>
                  <input type="tel" id="phone" name="phone" required class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" placeholder="+63 912 345 6789" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Email Address</label>
                <input type="email" id="email" name="email" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" placeholder="juan@email.com" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>

              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="branch" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Preferred Branch</label>
                  <select id="branch" name="branch" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));">
                    <option value="">Select a branch</option>
                    {branches.map((branch) => (
                      <option value={branch.id}>
                        {branch.name} {branch.is_main_branch ? '(Main)' : ''}
                      </option>
                    ))}
                  </select>
                </div>
                <div>
                  <label for="inquiry-type" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Inquiry Type</label>
                  <select id="inquiry-type" name="inquiry_type" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));">
                    <option value="">Select type</option>
                    <option value="general" selected={inquiryType === 'general'}>General Inquiry</option>
                    <option value="tire" selected={inquiryType === 'tire'}>Tire Inquiry</option>
                    <option value="mags" selected={inquiryType === 'mags'}>Mags/Wheels Inquiry</option>
                    <option value="service" selected={inquiryType === 'service'}>Service Inquiry</option>
                    <option value="quote" selected={inquiryType === 'quote'}>Request Quote</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="message" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Message <span class="text-primary">*</span></label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors resize-none"
                  placeholder="How can we help you?"
                  style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));"
                >{inquiryItem ? `Hi, I'm interested in: ${inquiryItem}\n\nPlease provide more information about availability and pricing.` : ''}</textarea>
              </div>

              <button type="submit" class="btn btn-primary w-full sm:w-auto">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
                Send Message
              </button>
            </form>

            <!-- Success message (hidden by default) -->
            <div id="form-success" class="hidden mt-6 p-4 bg-green-500/20 border border-green-500/50">
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="font-bold text-green-400 uppercase tracking-wide">Message sent successfully!</p>
                  <p class="text-green-300 text-sm">We'll get back to you as soon as possible.</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="space-y-6">
          <!-- Quick Contact -->
          <div class="card p-6">
            <h3 class="text-lg font-bold text-white mb-4 uppercase tracking-wide">Quick Contact</h3>
            <div class="space-y-4">
              <a href="tel:+639123456789" class="flex items-center gap-3 text-gray-400 hover:text-primary transition-colors">
                <div class="w-10 h-10 bg-primary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <span>+63 912 345 6789</span>
              </a>
              <a href="mailto:info@ecjtires.com" class="flex items-center gap-3 text-gray-400 hover:text-secondary transition-colors">
                <div class="w-10 h-10 bg-secondary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
                  <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <span>info@ecjtires.com</span>
              </a>
              <div class="flex items-center gap-3 text-gray-400">
                <div class="w-10 h-10 bg-primary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span>Open Daily: 8AM - 5PM</span>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="card p-6">
            <h3 class="text-lg font-bold text-white mb-4 uppercase tracking-wide">Follow Us</h3>
            <div class="flex gap-3">
              <a href="#" class="w-11 h-11 bg-dark-300 border border-dark-500 flex items-center justify-center hover:bg-primary hover:border-primary transition-all duration-300 group" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));" aria-label="Facebook">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="w-11 h-11 bg-dark-300 border border-dark-500 flex items-center justify-center hover:bg-gradient-to-br hover:from-purple-600 hover:to-pink-600 hover:border-pink-500 transition-all duration-300 group" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));" aria-label="Instagram">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                </svg>
              </a>
              <a href="#" class="w-11 h-11 bg-dark-300 border border-dark-500 flex items-center justify-center hover:bg-black hover:border-white transition-all duration-300 group" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));" aria-label="TikTok">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Branch Cards -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-white mb-8 text-center uppercase tracking-wide">Our <span class="gradient-text">Locations</span></h2>
        <div class="grid md:grid-cols-2 gap-8">
          {branches.map((branch) => (
            <div class="card overflow-hidden group hover:border-primary/50 transition-colors">
              {branch.is_main_branch && (
                <div class="bg-gradient-to-r from-primary to-secondary text-white text-center py-2 text-sm font-bold uppercase tracking-widest">
                  Main Branch
                </div>
              )}
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-4 uppercase tracking-wide">{branch.name}</h3>

                <div class="space-y-3 text-gray-400 mb-6">
                  <div class="flex items-start gap-3">
                    <div class="w-8 h-8 bg-primary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 4px) 0, 100% 4px, 100% 100%, 4px 100%, 0 calc(100% - 4px));">
                      <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                    <span>{branch.address}</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-secondary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 4px) 0, 100% 4px, 100% 100%, 4px 100%, 0 calc(100% - 4px));">
                      <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                    </div>
                    <span>{branch.phone}</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-primary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 4px) 0, 100% 4px, 100% 100%, 4px 100%, 0 calc(100% - 4px));">
                      <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <span>{branch.email}</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-secondary/20 flex items-center justify-center flex-shrink-0" style="clip-path: polygon(0 0, calc(100% - 4px) 0, 100% 4px, 100% 100%, 4px 100%, 0 calc(100% - 4px));">
                      <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <span>{branch.operating_hours}</span>
                  </div>
                </div>

                <!-- Map Section -->
                <div class="aspect-video rounded-lg overflow-hidden bg-dark-300 border border-dark-500 mb-6 group-hover:border-primary/50 transition-colors">
                  {branch.map_embed_url ? (
                    <iframe
                      src={branch.map_embed_url}
                      class="w-full h-full"
                      style="border:0;"
                      allowfullscreen=""
                      loading="lazy"
                      referrerpolicy="no-referrer-when-downgrade"
                    ></iframe>
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <div class="text-center text-gray-500">
                        <svg class="w-12 h-12 mx-auto mb-2 text-primary/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <p class="text-sm uppercase tracking-wider">Map Coming Soon</p>
                      </div>
                    </div>
                  )}
                </div>

                <div class="flex gap-3">
                  <a href={`tel:${branch.phone}`} class="flex-1 btn btn-primary text-center">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    Call Now
                  </a>
                  <a href="#" class="flex-1 btn btn-secondary text-center">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                    </svg>
                    Get Directions
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  // Simple form handling (demo only - replace with actual form submission)
  const form = document.getElementById('contact-form');
  const successMessage = document.getElementById('form-success');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Simulate form submission
    const submitBtn = form.querySelector('button[type="submit"]');
    if (submitBtn) {
      submitBtn.textContent = 'Sending...';
      submitBtn.setAttribute('disabled', 'true');
    }

    setTimeout(() => {
      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');
    }, 1000);
  });
</script>
