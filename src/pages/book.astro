---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';

// Fallback data
const branches = [
  { id: '1', name: 'ECJ Tires (Main Branch)' },
  { id: '2', name: 'ECJL Tires' },
];

const services = [
  { id: '1', name: 'Tire Installation & Mounting' },
  { id: '2', name: 'Wheel Alignment' },
  { id: '3', name: 'Tire Balancing' },
  { id: '4', name: 'Vulcanizing / Tire Repair' },
  { id: '5', name: 'Change Oil' },
  { id: '6', name: 'Brake Service' },
  { id: '7', name: 'Underchassis Repair' },
  { id: '8', name: 'Battery Service' },
  { id: '9', name: 'Aircon Cleaning' },
  { id: '10', name: 'Other Service' },
];

// Generate time slots
const timeSlots = [
  '8:00 AM',
  '8:30 AM',
  '9:00 AM',
  '9:30 AM',
  '10:00 AM',
  '10:30 AM',
  '11:00 AM',
  '11:30 AM',
  '1:00 PM',
  '1:30 PM',
  '2:00 PM',
  '2:30 PM',
  '3:00 PM',
  '3:30 PM',
  '4:00 PM',
];
---

<MainLayout title="Book an Appointment - ECJ Tire Supply">
  <Hero
    title="Book an Appointment"
    subtitle="Schedule Your Service"
    description="Book your tire service appointment online. Choose your preferred branch, service, date, and time."
    showStats={false}
    showCTA={false}
    compact={true}
  />

  <section class="py-20 bg-dark-100 relative overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-30"></div>
    <div class="absolute top-0 left-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>

    <div class="container mx-auto px-4 max-w-3xl relative z-10">
      <div class="card p-8">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary to-secondary mb-4" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white uppercase tracking-wide">Schedule Your Visit</h2>
          <p class="text-gray-400 mt-2">Fill out the form below and we will confirm your appointment.</p>
        </div>

        <form id="booking-form" class="space-y-6">
          <!-- Step indicator -->
          <div class="flex items-center justify-center gap-2 mb-8">
            <div class="flex items-center gap-2 text-sm font-bold text-primary uppercase tracking-wider">
              <span class="w-8 h-8 bg-primary text-white flex items-center justify-center text-xs" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">1</span>
              <span class="hidden sm:inline">Service</span>
            </div>
            <div class="w-8 h-0.5 bg-dark-500"></div>
            <div class="flex items-center gap-2 text-sm font-bold text-gray-500 uppercase tracking-wider">
              <span class="w-8 h-8 bg-dark-400 text-gray-500 flex items-center justify-center text-xs" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">2</span>
              <span class="hidden sm:inline">Date & Time</span>
            </div>
            <div class="w-8 h-0.5 bg-dark-500"></div>
            <div class="flex items-center gap-2 text-sm font-bold text-gray-500 uppercase tracking-wider">
              <span class="w-8 h-8 bg-dark-400 text-gray-500 flex items-center justify-center text-xs" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">3</span>
              <span class="hidden sm:inline">Your Info</span>
            </div>
          </div>

          <!-- Branch Selection -->
          <div>
            <label for="branch" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Select Branch <span class="text-primary">*</span></label>
            <select id="branch" name="branch" required class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));">
              <option value="">Choose a branch</option>
              {branches.map((branch) => (
                <option value={branch.id}>{branch.name}</option>
              ))}
            </select>
          </div>

          <!-- Service Selection -->
          <div>
            <label class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-3">Select Service(s) <span class="text-primary">*</span></label>
            <div class="grid sm:grid-cols-2 gap-3">
              {services.map((service) => (
                <label class="flex items-center gap-3 p-3 bg-dark-300 border border-dark-500 cursor-pointer hover:border-primary/50 transition-all duration-200 has-[:checked]:border-primary has-[:checked]:bg-primary/10" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
                  <input type="checkbox" name="services" value={service.id} class="w-5 h-5 accent-primary bg-dark-400 border-dark-500" />
                  <span class="text-gray-300 text-sm">{service.name}</span>
                </label>
              ))}
            </div>
          </div>

          <!-- Date Selection -->
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="date" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Preferred Date <span class="text-primary">*</span></label>
              <input
                type="date"
                id="date"
                name="date"
                required
                class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors"
                min={new Date().toISOString().split('T')[0]}
                style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));"
              />
            </div>
            <div>
              <label for="time" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Preferred Time <span class="text-primary">*</span></label>
              <select id="time" name="time" required class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));">
                <option value="">Select a time</option>
                {timeSlots.map((time) => (
                  <option value={time}>{time}</option>
                ))}
              </select>
            </div>
          </div>

          <!-- Vehicle Info -->
          <div class="border-t border-dark-500 pt-6">
            <h3 class="font-bold text-white mb-4 uppercase tracking-wide">Vehicle Information</h3>
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="vehicle-make" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Make/Brand</label>
                <input type="text" id="vehicle-make" name="vehicle_make" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="e.g., Toyota" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
              <div>
                <label for="vehicle-model" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Model</label>
                <input type="text" id="vehicle-model" name="vehicle_model" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="e.g., Vios" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
              <div>
                <label for="vehicle-year" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Year</label>
                <input type="text" id="vehicle-year" name="vehicle_year" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="e.g., 2020" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
              <div>
                <label for="vehicle-plate" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Plate Number</label>
                <input type="text" id="vehicle-plate" name="vehicle_plate" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-secondary focus:outline-none transition-colors" placeholder="e.g., ABC 1234" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="border-t border-dark-500 pt-6">
            <h3 class="font-bold text-white mb-4 uppercase tracking-wide">Contact Information</h3>
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Full Name <span class="text-primary">*</span></label>
                <input type="text" id="name" name="name" required class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" placeholder="Juan Dela Cruz" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Phone Number <span class="text-primary">*</span></label>
                <input type="tel" id="phone" name="phone" required class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" placeholder="+63 912 345 6789" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
              <div class="sm:col-span-2">
                <label for="email" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Email Address</label>
                <input type="email" id="email" name="email" class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors" placeholder="juan@email.com" style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));" />
              </div>
            </div>
          </div>

          <!-- Notes -->
          <div>
            <label for="notes" class="block text-sm font-semibold text-gray-300 uppercase tracking-wider mb-2">Additional Notes</label>
            <textarea
              id="notes"
              name="notes"
              rows="3"
              class="w-full bg-dark-300 border border-dark-500 text-white px-4 py-3 focus:border-primary focus:outline-none transition-colors resize-none"
              placeholder="Any special requests or additional information..."
              style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));"
            ></textarea>
          </div>

          <!-- Submit -->
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <button type="submit" class="btn btn-primary flex-1 py-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Book Appointment
            </button>
            <a href="tel:+639123456789" class="btn btn-secondary flex-1 py-4 text-center">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Or Call Us
            </a>
          </div>
        </form>

        <!-- Success message (hidden by default) -->
        <div id="booking-success" class="hidden text-center py-12">
          <div class="w-20 h-20 bg-green-500/20 border border-green-500/50 flex items-center justify-center mx-auto mb-6" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-10 h-10 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2 uppercase tracking-wide">Booking Request Sent!</h3>
          <p class="text-gray-400 mb-6">Thank you for your booking request. We will contact you shortly to confirm your appointment.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/" class="btn btn-primary">Back to Home</a>
            <a href="/contact/" class="btn btn-secondary">Contact Us</a>
          </div>
        </div>
      </div>

      <!-- Info Cards -->
      <div class="grid sm:grid-cols-3 gap-6 mt-8">
        <div class="card p-6 text-center group hover:border-primary/50 transition-colors">
          <div class="w-12 h-12 bg-primary/20 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-white mb-1 uppercase tracking-wide text-sm">Quick Confirmation</h3>
          <p class="text-sm text-gray-400">We will confirm your appointment within a few hours.</p>
        </div>
        <div class="card p-6 text-center group hover:border-secondary/50 transition-colors">
          <div class="w-12 h-12 bg-secondary/20 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-bold text-white mb-1 uppercase tracking-wide text-sm">No Obligation</h3>
          <p class="text-sm text-gray-400">Free to reschedule or cancel if plans change.</p>
        </div>
        <div class="card p-6 text-center group hover:border-warning/50 transition-colors">
          <div class="w-12 h-12 bg-warning/20 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
            <svg class="w-6 h-6 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-white mb-1 uppercase tracking-wide text-sm">Expert Service</h3>
          <p class="text-sm text-gray-400">Professional technicians at your service.</p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  // Simple form handling (demo only - replace with actual form submission)
  const form = document.getElementById('booking-form');
  const successMessage = document.getElementById('booking-success');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Check if at least one service is selected
    const services = form.querySelectorAll('input[name="services"]:checked');
    if (services.length === 0) {
      alert('Please select at least one service.');
      return;
    }

    // Simulate form submission
    const submitBtn = form.querySelector('button[type="submit"]');
    if (submitBtn) {
      submitBtn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Processing...
      `;
      submitBtn.setAttribute('disabled', 'true');
    }

    setTimeout(() => {
      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');
    }, 1500);
  });
</script>

<style>
  /* Custom checkbox styling for service selection */
  input[type="checkbox"]:checked + span {
    color: #ff6b35;
    font-weight: 600;
  }
</style>
