---
import MainLayout from '../../layouts/MainLayout.astro';
import Hero from '../../components/Hero.astro';
import { galleryCategories } from '../../lib/brands.js';

// Sample gallery data (will be replaced with Directus data)
const sampleGallery = [
  { id: '1', title: 'Bridgestone Tire Installation', category: 'tires', is_featured: true },
  { id: '2', title: 'Rota Wheels Setup', category: 'wheels', is_featured: true },
  { id: '3', title: 'Wheel Alignment Service', category: 'services', is_featured: true },
  { id: '4', title: 'Our Main Shop', category: 'shop', is_featured: true },
  { id: '5', title: 'Customer Vehicle', category: 'customers', is_featured: false },
  { id: '6', title: 'Premium Tire Selection', category: 'tires', is_featured: false },
  { id: '7', title: 'Enkei Wheels Display', category: 'wheels', is_featured: false },
  { id: '8', title: 'Tire Balancing in Action', category: 'services', is_featured: false },
  { id: '9', title: 'Workshop Area', category: 'shop', is_featured: false },
  { id: '10', title: 'Happy Customer Pickup', category: 'customers', is_featured: false },
  { id: '11', title: 'Michelin Tire Mounted', category: 'tires', is_featured: false },
  { id: '12', title: 'Work Wheels Showcase', category: 'wheels', is_featured: false },
];

const gallery = sampleGallery;

// Get URL params for filtering
const url = Astro.url;
const selectedCategory = url.searchParams.get('category') || '';

// Filter gallery
let filteredGallery = gallery;
if (selectedCategory) {
  filteredGallery = filteredGallery.filter(item => item.category === selectedCategory);
}

// Get category label
function getCategoryLabel(value: string): string {
  const category = galleryCategories.find(c => c.value === value);
  return category ? category.label : value;
}
---

<MainLayout title="Gallery - ECJ Tire Supply">
  <Hero
    title="Our Gallery"
    subtitle="See Our Work"
    description="Browse through photos of our shop, services, and happy customers. Quality work you can see."
    showStats={false}
    showCTA={false}
    compact={true}
  />

  <section class="py-20 bg-dark-100 relative overflow-hidden">
    <div class="absolute inset-0 grid-pattern opacity-30"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>

    <div class="container mx-auto px-4 relative z-10">
      <!-- Category Filter -->
      <div class="flex flex-wrap justify-center gap-3 mb-10">
        <a
          href="/gallery/"
          class:list={[
            'px-5 py-2 font-bold uppercase tracking-wider text-sm transition-all duration-300',
            !selectedCategory
              ? 'bg-primary text-white'
              : 'bg-dark-300 border border-dark-500 text-gray-400 hover:border-primary/50 hover:text-white',
          ]}
          style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));"
        >
          All
        </a>
        {galleryCategories.map((category) => (
          <a
            href={`/gallery/?category=${category.value}`}
            class:list={[
              'px-5 py-2 font-bold uppercase tracking-wider text-sm transition-all duration-300',
              selectedCategory === category.value
                ? 'bg-secondary text-dark-100'
                : 'bg-dark-300 border border-dark-500 text-gray-400 hover:border-secondary/50 hover:text-white',
            ]}
            style="clip-path: polygon(0 0, calc(100% - 8px) 0, 100% 8px, 100% 100%, 8px 100%, 0 calc(100% - 8px));"
          >
            {category.label}
          </a>
        ))}
      </div>

      <!-- Results info -->
      <div class="mb-6 text-center">
        <p class="text-gray-400">
          Showing <span class="font-bold text-white">{filteredGallery.length}</span> photo{filteredGallery.length !== 1 ? 's' : ''}
          {selectedCategory && <span> in <span class="font-bold text-secondary">{getCategoryLabel(selectedCategory)}</span></span>}
        </p>
      </div>

      <!-- Gallery Grid -->
      {filteredGallery.length > 0 ? (
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {filteredGallery.map((item) => (
            <div
              class="card overflow-hidden group cursor-pointer hover:border-primary/50 transition-colors"
              data-gallery-item
              data-title={item.title}
              data-category={item.category}
            >
              <!-- Image Placeholder -->
              <div class="aspect-square bg-gradient-to-br from-dark-300 to-dark-400 relative overflow-hidden">
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center p-4">
                    <svg class="w-16 h-16 mx-auto text-gray-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span class="text-sm text-gray-500 uppercase tracking-wider">Photo</span>
                  </div>
                </div>

                {/* Overlay on hover */}
                <div class="absolute inset-0 bg-gradient-to-t from-dark-100/90 via-dark-100/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <span class="inline-block bg-secondary text-dark-100 text-xs px-3 py-1 font-bold uppercase tracking-wider mb-2" style="clip-path: polygon(0 0, calc(100% - 4px) 0, 100% 4px, 100% 100%, 4px 100%, 0 calc(100% - 4px));">
                      {getCategoryLabel(item.category)}
                    </span>
                    <h3 class="text-white font-bold">{item.title}</h3>
                  </div>
                </div>

                {/* Zoom icon */}
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="w-14 h-14 bg-primary flex items-center justify-center" style="clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                    </svg>
                  </div>
                </div>

                {item.is_featured && (
                  <div class="absolute top-3 left-3 bg-warning text-dark-100 text-xs px-3 py-1 font-bold uppercase tracking-wider" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
                    Featured
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h3 class="text-xl font-bold text-white mb-2 uppercase tracking-wide">No photos found</h3>
          <p class="text-gray-400 mb-4">Try selecting a different category.</p>
          <a href="/gallery/" class="btn btn-primary">View All Photos</a>
        </div>
      )}

      <!-- Note about images -->
      <div class="mt-12 text-center">
        <p class="text-gray-500 text-sm uppercase tracking-wider">
          Photos will be uploaded soon. Check back for updates or follow us on social media!
        </p>
        <div class="flex justify-center gap-4 mt-4">
          <a href="#" class="w-10 h-10 bg-dark-300 border border-dark-500 flex items-center justify-center text-gray-400 hover:text-primary hover:border-primary transition-colors" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-dark-300 border border-dark-500 flex items-center justify-center text-gray-400 hover:text-secondary hover:border-secondary transition-colors" style="clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 6px 100%, 0 calc(100% - 6px));">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  [data-gallery-item] {
    transition: transform 0.3s ease;
  }
  [data-gallery-item]:hover {
    transform: scale(1.02);
  }
</style>
