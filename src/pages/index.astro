---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import { tireBrands, serviceIcons } from '../lib/brands.js';
import { getSiteSettings, getImageUrl, getBranches, getServices } from '../lib/directus.js';

// Fetch site settings for hero background
const siteSettings = await getSiteSettings();
const heroBackgroundUrl = siteSettings?.hero_background ? getImageUrl(siteSettings.hero_background) : null;

// Fallback data when Directus is not available
const fallbackBranches = [
  {
    id: '1',
    name: 'ECJ Tires',
    is_main_branch: true,
    address: 'Main Street, Antipolo City, Rizal',
    phone: '+63 912 345 6789',
    operating_hours: '8:00 AM - 5:00 PM Daily',
    email: 'ecjtires@email.com',
  },
  {
    id: '2',
    name: 'ECJL Tires',
    is_main_branch: false,
    address: 'Second Branch Location, Antipolo City, Rizal',
    phone: '+63 912 345 6790',
    operating_hours: '8:00 AM - 5:00 PM Daily',
    email: 'ecjltires@email.com',
  },
];

const fallbackServices = [
  { id: '1', name: 'Tire Installation', slug: 'tire-installation', short_description: 'Professional tire mounting and installation for all vehicle types.', icon: 'tire-installation' },
  { id: '2', name: 'Wheel Alignment', slug: 'wheel-alignment', short_description: 'Precision alignment to extend tire life and improve handling.', icon: 'wheel-alignment' },
  { id: '3', name: 'Tire Balancing', slug: 'tire-balancing', short_description: 'Computer-balanced wheels for a smooth, vibration-free ride.', icon: 'tire-balancing' },
  { id: '4', name: 'Vulcanizing', slug: 'vulcanizing', short_description: 'Expert tire repair and patching services.', icon: 'vulcanizing' },
  { id: '5', name: 'Change Oil', slug: 'change-oil', short_description: 'Quality oil change service to keep your engine running smoothly.', icon: 'change-oil' },
  { id: '6', name: 'Brake Service', slug: 'brake-service', short_description: 'Complete brake inspection, repair, and replacement.', icon: 'brake-service' },
];

// Fetch from Directus with fallback
const directusBranches = await getBranches();
const directusServices = await getServices();
const branches = directusBranches.length > 0 ? directusBranches : fallbackBranches;
const services = directusServices.length > 0 ? directusServices : fallbackServices;
---

<MainLayout title="ECJ Tire Supply - Quality Tires & Expert Service in Antipolo">
  <!-- Hero Section -->
  <Hero backgroundImage={heroBackgroundUrl} />

  <!-- Branch Showcase Section -->
  <section class="py-16 bg-dark-200">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <div class="section-badge justify-center mx-auto">
          <span class="w-2 h-2 bg-primary rounded-full"></span>
          <span>Our Locations</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Visit Our Branches
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Two convenient locations to serve you better. Quality tires and expert service at both branches.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {branches.map((branch) => (
          <div class="card overflow-hidden">
            {branch.is_main_branch && (
              <div class="bg-primary text-dark text-center py-2 text-sm font-semibold">
                Main Branch
              </div>
            )}
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-4">{branch.name}</h3>

              <div class="space-y-3 text-gray-400">
                <div class="flex items-start gap-3">
                  <div class="w-8 h-8 bg-dark-300 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <span>{branch.address}</span>
                </div>

                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-dark-300 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <span>{branch.phone}</span>
                </div>

                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-dark-300 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <span>{branch.operating_hours}</span>
                </div>
              </div>

              <!-- Map Section -->
              <div class="mt-6 aspect-video rounded-lg overflow-hidden bg-dark-300 border border-dark-400">
                {branch.map_embed_url ? (
                  <iframe
                    src={branch.map_embed_url}
                    class="w-full h-full"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                  ></iframe>
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <div class="text-center text-gray-500">
                      <svg class="w-10 h-10 mx-auto mb-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <p class="text-sm">Map Coming Soon</p>
                    </div>
                  </div>
                )}
              </div>

              <div class="mt-6 flex gap-3">
                <a href={`tel:${branch.phone}`} class="flex-1 btn btn-primary text-center">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  Call Now
                </a>
                <a href="/contact/" class="flex-1 btn btn-secondary text-center">
                  Get Directions
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Services Section -->
  <section class="py-16 bg-dark-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <div class="section-badge justify-center mx-auto">
          <span class="w-2 h-2 bg-primary rounded-full"></span>
          <span>What We Offer</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Our Services
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">From tire installation to complete car care, we provide comprehensive automotive services.</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {services.map((service) => (
          <div class="card p-6 group">
            <div class="w-12 h-12 bg-dark-300 rounded-lg flex items-center justify-center mb-4 group-hover:bg-dark-400 transition-colors">
              <span class="text-2xl">{serviceIcons[service.icon] || serviceIcons.default}</span>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">{service.name}</h3>
            <p class="text-gray-400 mb-4 text-sm">{service.short_description}</p>
            <a href={`/services/#${service.slug}`} class="inline-flex items-center text-primary font-medium hover:text-primary-light transition-colors text-sm">
              Learn More
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        ))}
      </div>

      <div class="text-center mt-10">
        <a href="/services/" class="btn btn-secondary">
          View All Services
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Tire Brands Section -->
  <section class="py-16 bg-dark-200">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <div class="section-badge justify-center mx-auto">
          <span class="w-2 h-2 bg-primary rounded-full"></span>
          <span>Premium Selection</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Trusted Tire Brands
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">We carry a wide selection of top tire brands to fit every need and budget.</p>
      </div>

      <div class="flex flex-wrap justify-center gap-3 md:gap-4 max-w-5xl mx-auto">
        {tireBrands.slice(0, 12).map((brand) => (
          <div class="bg-dark-300 border border-dark-400 px-5 py-3 rounded-lg hover:border-primary/50 hover:bg-dark-400 transition-all">
            <span class="text-gray-300 font-medium">{brand}</span>
          </div>
        ))}
      </div>

      <div class="text-center mt-10">
        <a href="/tires/" class="btn btn-secondary">
          Browse All Tires
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-dark-100 border-t border-dark-400">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Ready to Get Rolling?
        </h2>
        <p class="text-lg text-gray-400 mb-8">Book an appointment today or visit any of our branches. We're here to help!</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/book/" class="btn btn-primary px-8 py-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Book Appointment
          </a>
          <a href="/contact/" class="btn btn-secondary px-8 py-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
