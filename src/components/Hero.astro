---
interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  showStats?: boolean;
  showCTA?: boolean;
  backgroundImage?: string;
  compact?: boolean;
}

const {
  title = 'ECJ Tire Supply',
  subtitle = 'Quality Tires & Expert Service',
  description = 'Your trusted tire experts in Antipolo, Philippines. From tires and mags to alignment, balancing, and full car care services - we have got you covered.',
  showStats = true,
  showCTA = true,
  backgroundImage,
  compact = false,
} = Astro.props;
---

<section class:list={[
  'relative overflow-hidden',
  compact ? 'py-16 md:py-24' : 'py-20 md:py-32',
]}>
  <!-- Background -->
  {backgroundImage ? (
    <div class="absolute inset-0">
      <img src={backgroundImage} alt="" class="w-full h-full object-cover" />
      <div class="absolute inset-0 hero-overlay"></div>
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-blue-600 via-blue-700 to-emerald-600"></div>
  )}

  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-emerald-400/20 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center text-white">
      {!compact && (
        <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full mb-6">
          <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
          <span class="text-sm font-medium">Trusted Tire Experts in Antipolo</span>
        </div>
      )}

      <h1 class:list={[
        'font-bold mb-4',
        compact ? 'text-3xl md:text-4xl' : 'text-4xl md:text-6xl',
      ]}>
        {title}
      </h1>

      {subtitle && (
        <p class:list={[
          'font-medium text-blue-100 mb-6',
          compact ? 'text-lg md:text-xl' : 'text-xl md:text-2xl',
        ]}>
          {subtitle}
        </p>
      )}

      {description && !compact && (
        <p class="text-lg text-blue-100/90 max-w-2xl mx-auto mb-8">
          {description}
        </p>
      )}

      {showCTA && !compact && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a href="/book/" class="btn btn-accent text-lg px-8 py-4">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Book Appointment
          </a>
          <a href="/services/" class="btn btn-white text-lg px-8 py-4">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            View Services
          </a>
        </div>
      )}

      {showStats && !compact && (
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8 py-8 px-4 bg-white/10 backdrop-blur-sm rounded-2xl">
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold">500+</div>
            <div class="text-blue-100 text-sm">Happy Customers</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold">15+</div>
            <div class="text-blue-100 text-sm">Tire Brands</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold">8AM-5PM</div>
            <div class="text-blue-100 text-sm">Daily Service</div>
          </div>
          <div class="text-center">
            <div class="flex items-center justify-center gap-1">
              <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span class="text-3xl md:text-4xl font-bold">4.9</span>
            </div>
            <div class="text-blue-100 text-sm">Google Rating</div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
