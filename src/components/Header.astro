---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services/', label: 'Services' },
  { href: '/tires/', label: 'Tires' },
  { href: '/mags/', label: 'Mags' },
  { href: '/gallery/', label: 'Gallery' },
  { href: '/contact/', label: 'Contact' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="fixed w-full top-0 z-50 bg-dark-100/95 backdrop-blur-md border-b border-dark-400">
  <div class="container mx-auto px-4">
    <!-- Logo Row - Centered -->
    <div class="flex justify-center py-4 border-b border-dark-300">
      <a href="/" class="flex flex-col items-center gap-1 group">
        <!-- Logo Image - Replace src with your actual logo -->
        <img
          src="/logo.png"
          alt="ECJ Tires Logo"
          class="h-16 md:h-20 w-auto object-contain"
        />
        <span class="text-xs text-gray-500 tracking-wider">Tire Supply & Auto Repair Shop</span>
      </a>
    </div>

    <!-- Navigation Row -->
    <nav class="flex items-center justify-center py-3">
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200',
              isActive(link.href)
                ? 'bg-dark-300 text-white'
                : 'text-gray-400 hover:text-white hover:bg-dark-300/50',
            ]}
          >
            {link.label}
          </a>
        ))}
        <a href="/book/" class="ml-4 btn btn-accent text-sm py-2 px-5">
          Book Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-400 hover:text-white transition-colors rounded-lg"
        aria-label="Toggle menu"
      >
        <svg id="menu-open-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col gap-1 pt-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-4 py-3 font-medium rounded-lg transition-all duration-200',
              isActive(link.href)
                ? 'bg-dark-300 text-white'
                : 'text-gray-400 hover:text-white hover:bg-dark-300/50',
            ]}
          >
            {link.label}
          </a>
        ))}
        <a href="/book/" class="btn btn-accent mt-3 text-center">
          Book Appointment
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-36 md:h-40"></div>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const openIcon = document.getElementById('menu-open-icon');
  const closeIcon = document.getElementById('menu-close-icon');

  menuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');

    if (isOpen) {
      mobileMenu?.classList.add('hidden');
      openIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    } else {
      mobileMenu?.classList.remove('hidden');
      openIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    }
  });
</script>
